<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="org.apache.hc.client5.http.wire" level="WARN" />
    <logger name="org.apache.hc.client5.http.impl" level="WARN" />
    <logger name="org.apache.hc.core5.http.wire" level="WARN" />
    <logger name="org.apache.hc.core5.http.impl" level="WARN" />
</configuration>
